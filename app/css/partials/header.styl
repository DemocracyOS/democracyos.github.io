.header-bg
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 74px
  background-size: cover
  background-repeat: no-repeat
  background-position: center top
  background-image: url('../img/cover-hands-2.jpg')

.header
  position: absolute
  left: 0
  top: 0
  padding: 10px 20px
  width: 100%

  .logo,
  menu
    position: relative
    z-index: 10

  .logo
    position: relative
    float: left
    padding: 10px 0
    height: 50px
    z-index: 5

    a
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%

    img
      height: 100%

    .mobile
      display: none

    @media all and (max-width: 700px)
      .desktop
        display: none

      .mobile
        display: block


  menu
    text-align: right
    transition: all .1s linear

    a
      display: inline-block
      padding: 0 1em
      color: rgba(#f5f5f5,.7)
      font-size: 18px
      text-decoration: none
      text-rendering: optimizeLegibility
      font-weight: 300

      &.active,
      &:hover
        color: #f5f5f5
