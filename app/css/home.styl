.cover
  position: relative
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  padding-top: 2em
  min-height: 480px
  width: 100%
  height: 100vh
  background-size: cover
  background-repeat: no-repeat
  background-position: center bottom
  background-image: url('../img/cover-hands-2.jpg')

  .content
    position: relative
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    padding: 20px
    width: 990px

  .change-the-tool
    width: 100%
    padding-bottom: 4em
    background-size: contain
    background-repeat: no-repeat
    background-position: center top
    background-image: url('../img/change-the-tool.png')

    &:after
      content: ''
      display: block
      padding-top: 21%

  .machines
    width: 100%
    margin-top: 8em
    background-size: contain
    background-repeat: no-repeat
    background-position: center top
    background-image: url('../img/machines.png')

    &:after
      content: ''
      display: block
      padding-top: 49%

  .down-arrow
    position: absolute
    bottom: 1em
    left: 50%
    margin-left: -23px
    width: 46px
    height: 24px
    background-size: 100%
    background-repeat: no-repeat
    background-position: center top
    background-image: url('../img/down-arrow.svg')

.home
  .features
    display: flex
    justify-content: center
    flex-wrap: wrap
    width: 100%
    margin-bottom: 3em

    div
      padding: 1em
      max-width: 420px
      text-align: center

      img
        display: inline-block

  .featurevideo
    display: flex
    flex-direction: row
    justify-content: center
    flex-wrap: wrap
    align-content: stretch
    width: 100%
    font-size: 24px
    background-color: #634671

    .video,
    .quote
      width: 50%

      @media all and (max-width: 767px)
        width: 100%

    .video
      position: relative

      &:after
        content: ''
        display: block
        padding-top: 56%

      iframe
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%

    .quote
      padding: 1.5em 2.5em

      p
        font-size: 1em
        color: #f5f5f5
        font-weight: 100
        line-height: 1.5

      .author,
      .detail
        text-align: right

      .author
        font-size: .7em
        margin-top: 2em

      .detail
        font-size: .6em
        font-style: italic

  .press
    padding: 2.5em 2em
    background-color: #C4C2C2

    h1
      margin-top: 0
      color: white

    .press-items
      text-align: center

      a
        padding: 1.2em
        display: inline-block
